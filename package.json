{
    "name": "docfx-assistant",
    "displayName": "DocFX Assistant",
    "description": "Tools to assist with authoring content using Microsoft DocFX.",
    "version": "0.0.2",
    "publisher": "tintoy",
    "license": "https://raw.githubusercontent.com/tintoy/docfx-assistant/master/LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/tintoy/docfx-assistant.git"
    },
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:docfx.json",
        "onCommand:docfx.insertTopicUID"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "docfx.refreshTopicUIDs",
                "title": "DocFX: Refresh topic UIDs"
            },
            {
                "command": "docfx.insertTopicUID",
                "title": "DocFX: Insert topic UID"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+shift+alt+u",
                "command": "docfx.insertTopicUID"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/glob": "^5.0.30",
        "@types/js-yaml": "^3.9.0",
        "@types/mocha": "^2.2.32",
        "@types/mz": "0.0.31",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "glob": "^7.1.2",
        "js-yaml": "^3.9.1",
        "mz": "^2.6.0",
        "yaml-front-matter": "^3.4.0"
    }
}
