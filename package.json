{
    "name": "docfx-assistant",
    "displayName": "DocFX Assistant",
    "description": "Tools to assist with authoring content using Microsoft DocFX.",
    "version": "0.0.6",
    "publisher": "tintoy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/tintoy/docfx-assistant.git"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:docfx.json",
        "onCommand:docfx.refreshTopicUIDs",
        "onCommand:docfx.insertAnyTopicUID",
        "onCommand:docfx.insertNamespaceTopicUID",
        "onCommand:docfx.insertTypeTopicUID",
        "onCommand:docfx.insertPropertyTopicUID",
        "onCommand:docfx.insertMethodTopicUID",
        "onCommand:docfx.insertPowerShellCmdletTopicUID"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "properties": {
                "docfxAssistant.disableAutoScan": {
                    "title": "Disable project auto-scan",
                    "description": "Don't automatically scan projects when first opening them.",
                    "type": "boolean"
                }
            }
        },
        "configurationDefaults": {
            "docfxAssistant.disableAutoScan": false
        },
        "commands": [
            {
                "command": "docfx.refreshTopicUIDs",
                "title": "DocFX: Refresh topic UIDs"
            },
            {
                "command": "docfx.insertAnyTopicUID",
                "title": "DocFX: Insert topic UID"
            },
            {
                "command": "docfx.insertNamespaceTopicUID",
                "title": "DocFX: Insert UID for a namespace topic"
            },
            {
                "command": "docfx.insertTypeTopicUID",
                "title": "DocFX: Insert UID for a type topic"
            },
            {
                "command": "docfx.insertPropertyTopicUID",
                "title": "DocFX: Insert UID for a property topic"
            },
            {
                "command": "docfx.insertMethodTopicUID",
                "title": "DocFX: Insert UID for a method topic"
            },
            {
                "command": "docfx.insertPowerShellCmdletTopicUID",
                "title": "DocFX: Insert UID for a PowerShell Cmdlet topic"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+shift+alt+u",
                "command": "docfx.insertAnyTopicUID"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/glob": "^5.0.30",
        "@types/js-yaml": "^3.9.0",
        "@types/mocha": "^2.2.32",
        "@types/mz": "0.0.31",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "tslint": "^5.5.0",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "glob": "^7.1.2",
        "js-yaml": "^3.9.1",
        "minimatch": "^3.0.4",
        "mz": "^2.6.0",
        "rxjs": "^5.4.2",
        "yaml-front-matter": "^3.4.0"
    }
}
